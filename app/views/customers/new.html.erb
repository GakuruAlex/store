<%= form_with model: @customer, local: true, class: "max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |form| %>
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Add New Customer</h2>

  <!-- Name -->
  <div class="mb-4">
    <%= form.label :name, "Full Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, placeholder: "Enter customer name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  

  <!-- Submit -->
  <div class="flex items-center justify-between">
    <%= form.submit "Create Customer", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>
<% end %>
