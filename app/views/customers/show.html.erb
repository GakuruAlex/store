<div class="max-w-4xl mx-auto mt-12 p-4">
  <nav class="flex mb-6 text-gray-500 text-sm">
    <%= link_to "Customers", customers_path, class: "hover:text-blue-600 transition" %>
    <span class="mx-2">/</span>
    <span class="text-gray-800 font-medium"><%= @customer.name %></span>
  </nav>

  <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100">
    <div class="md:flex">
      <div class="md:w-1/3 bg-gray-50 flex items-center justify-center p-8 border-r border-gray-100">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-100 text-blue-600 rounded-full mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d=" box-icon d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <p class="text-xs font-mono text-gray-400">ID: #<%= @customer.id %></p>
        </div>
      </div>

      <div class="md:w-2/3 p-8">
          <div>
            <p class="text-sm text-gray-500 uppercase font-semibold">Date Created</p>
            <p class="text-lg font-medium text-gray-900">
              <%= @customer.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>

        <div class="flex flex-wrap gap-3">
          <%= link_to edit_customer_path(@customer), 
              class: "flex-1 inline-flex justify-center items-center px-4 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 shadow-lg shadow-blue-200 transition duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
            Edit Customer
          <% end %>

          <%= link_to customer_path(@customer), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" },
              class: "inline-flex items-center px-4 py-3 border border-gray-200 text-base font-medium rounded-xl text-red-600 bg-white hover:bg-red-50 transition duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>