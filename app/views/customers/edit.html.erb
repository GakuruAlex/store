<div class="max-w-4xl mx-auto mt-12 p-4">
  <!-- Breadcrumb -->
  <nav class="flex mb-6 text-gray-500 text-sm">
    <%= link_to "Customers", customers_path, class: "hover:text-blue-600 transition" %>
    <span class="mx-2">/</span>
    <span class="text-gray-800 font-medium">Edit <%= @customer.name %></span>
  </nav>

  <!-- Edit Form Card -->
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-100">
    <div class="md:flex">
      <!-- Sidebar -->
      <div class="md:w-1/3 bg-gray-50 flex items-center justify-center p-8 border-r border-gray-100">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-100 text-blue-600 rounded-full mb-4">
            <!-- Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 4v16m8-8H4" />
            </svg>
          </div>
          <p class="text-xs font-mono text-gray-400">Editing ID: #<%= @customer.id %></p>
        </div>
      </div>

      <!-- Form Section -->
      <div class="md:w-2/3 p-8">
        <%= form_with model: @customer, local: true, class: "space-y-6" do |form| %>
          <!-- Name -->
          <div>
            <%= form.label :name, "Full Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Submit + Cancel -->
          <div class="flex gap-3">
            <%= form.submit "Update Customer", class: "flex-1 inline-flex justify-center items-center px-6 py-3 text-base font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 shadow-lg shadow-blue-200 transition duration-200" %>

            <%= link_to "Cancel", customer_path(@customer),
              class: "inline-flex items-center px-6 py-3 border border-gray-200 text-base font-medium rounded-xl text-gray-600 bg-white hover:bg-gray-50 transition duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
