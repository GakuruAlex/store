
<div class="bg-white shadow rounded-lg p-6 space-y-4">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Product Details</h2>

  <div>
    <span class="block text-sm font-medium text-gray-500">Name</span>
    <p class="mt-1 text-lg text-gray-900"><%= @product.name %></p>
  </div>

  <div>
    <span class="block text-sm font-medium text-gray-500">Quantity</span>
    <p class="mt-1 text-lg text-gray-900"><%= @product.quantity %></p>
  </div>

  <div>
    <span class="block text-sm font-medium text-gray-500">Price</span>
    <p class="mt-1 text-lg text-gray-900"><%= @product.price %></p>
  </div>

  <div class="flex space-x-3 pt-4">
    <%= link_to "Edit", edit_product_path(@product),
        class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

    <%= link_to "Back", products_path,
        class: "inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400" %>
  </div>
</div>
